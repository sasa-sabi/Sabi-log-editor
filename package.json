{
  "name": "sabilog",
  "displayName": "sabilog",
  "description": "This extention can edit sabilog web.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.82.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "sabilog.savemd",
        "title": "Save as markdown"
      },
      {
        "command": "sabilog.viewmd",
        "title": "View md in sabilog format"
      },
      {
        "command": "sabilog.downhtml",
        "title": "Download html file"
      },
      {
        "command": "sabilog.updatemd",
        "title": "Update md page in notion"
      },
      {
        "command": "sabilog.debug",
        "title": "Debug"
      }
    ],
    "keybindings": [
      {
        "command": "sabilog.savemd",
        "key": "ctrl+shift+n",
        "mac": "cmd+shift+n"
      },
      {
        "command": "sabilog.viewmd",
        "key": "ctrl+shift+m",
        "mac": "cmd+shift+m"
      },
      {
        "command": "sabilog.downhtml",
        "key": "ctrl+shift+l",
        "mac": "cmd+shift+l"
      },
      {
        "command": "sabilog.updatemd",
        "key": "ctrl+shift+u",
        "mac": "cmd+shift+u"
      },
      {
        "command": "sabilog.debug",
        "key": "ctrl+shift+F4",
        "mac": "cmd+shift+F4"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "sabilog.savemd",
          "group": "sabilog-navigation"
        },
        {
          "command": "sabilog.viewmd",
          "group": "sabilog-navigation"
        },
        {
          "command": "sabilog.downhtml",
          "group": "sabilog-navigation"
        },
        {
          "command": "sabilog.updatemd",
          "group": "sabilog-navigation"
        },
        {
          "command": "sabilog.debug",
          "group": "sabilog-debug"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "sabilog_editor",
          "title": "sabilogエディタ",
          "icon": "media/icon.png"
        }
      ]
    },
    "views": {
      "sabilog_editor": [
        {
          "id": "sabilog_webview",
          "name": "markdownエディタ"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.82.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "@notionhq/client": "^2.2.13",
    "axios": "^1.5.1",
    "cloudinary": "^1.41.0"
  }
}
